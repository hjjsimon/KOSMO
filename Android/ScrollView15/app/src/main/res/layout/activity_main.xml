                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="버튼8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="버튼9"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="버튼10"/>

        </LinearLayout>
    </ScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:text="버튼1"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="버튼2"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="버튼3"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="버튼4"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="버튼5"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="버튼6"/>
