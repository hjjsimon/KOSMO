<?xml version="1.0" encoding="utf-8"?>
<!--
cardElevation:그림자가 있는 카드뷰를 생성
cardCornerRadius:모서리 반지름 설정
cardBackgroundColor:카드뷰의 배경색을 설정
contentPadding:카드 뷰 내의 여백 설정
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--카드뷰로 라운드 이미지 만들기-->
        <!--카드뷰안에는 뷰가 무조건 하나 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#747E78"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <GridLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:rowCount="4"
                android:columnCount="2"

                >
                <TextView
                    android:text="아 이 디"
                    android:layout_gravity="fill"
                    android:background="#A66D6D"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:id="@+id/itemUserId"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="가나다"
                    android:paddingLeft="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_columnSpan="2"/>                    />
                <TextView
                    android:text="글 번 호"
                    android:layout_gravity="fill"
                    android:background="#A66D6D"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:id="@+id/itemId"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="가나다"
                    android:paddingLeft="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_columnSpan="2"/>
                <TextView
                    android:text="제       목"
                    android:layout_gravity="fill"
                    android:background="#A66D6D"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:id="@+id/itemTitle"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="가나다"
                    android:paddingLeft="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_columnSpan="2"/>
                <TextView
                    android:text="내       용"
                    android:layout_gravity="fill"
                    android:background="#A66D6D"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:id="@+id/itemBody"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="가나다"
                    android:paddingLeft="10dp"
                    />
            </GridLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>